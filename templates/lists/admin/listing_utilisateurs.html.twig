{% extends 'base.html.twig' %}
{% block titre %}<h2>Utilisateurs</h2>{% endblock %}
{% block page %}
    <div class="tab">
        <table>
            <tr>
                <th>Login</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Role</th>
                {#<th></th>#}
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.login }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.roles[0] }}</td>
                    {% if app.user.id != user.id%}
                        {% if 'ROLE_ADMIN' not in user.roles[0] %}
                    <td class="optional_td">
                        <a href="{{ path('admin_add_admin',{'id_user' : user.id}) }}">
                           Rendre Admin
                        </a>
                    </td>
                    {% endif %}
                    {% endif %}
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}