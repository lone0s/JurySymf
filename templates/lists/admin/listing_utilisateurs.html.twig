{% extends 'base.html.twig' %}
{% block title %}Utilisateurs{% endblock %}
{% block page %}
    <div class="tab">
        <h2>Liste des utilisateurs</h2>
        <table>
            <tr>
                <th>Login</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Role</th>
                <th></th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.login }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.roles[0] }}</td>
                    {% if app.user.id != user.id%}
                    <td>
                        <a href="{{ path('admin_add_admin',{'id_user' : user.id}) }}">
                           Rendre Admin
                        </a>
                    </td>
                    {% else %}
                        <td></td>
                    {% endif %}
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}