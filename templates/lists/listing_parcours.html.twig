{% extends 'base.html.twig' %}

{% block titre %}
    <h2>Les Parcours</h2>
{% endblock %}
{% block list %}
    <table>
        <th>Nom</th>
        <th>Nom Court</th>
        <th>Annee</th>
        <th>Periodicite</th>
        <th>Compensation</th>
        <th>Code Apogée</th>
        <th>Actif</th>
        <th>Commentaire</th>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.nom }}</td>
                <td>{{ parcour.nomCourt }}</td>
                <td>{{ parcour.annee }}</td>
                <td>{{ parcour.periodicite.nom }}</td>
                {% if 1 in parcour.compensation%}
                    <td>Faux</td>
                {% else %}
                    <td>Vrai</td>
                {% endif %}
                <td>{{ parcour.codeApogee }}</td>
                {% if 1 in parcour.actif%}
                    <td>Faux</td>
                {% else %}
                    <td>Vrai</td>
                {% endif %}
                <td>{{ parcour.commentaire | default ('NULL')}}</td>
                <td class="optional_td"><a href = '{{ path('app_change_parcours', {'id_parcours':parcour.id}) }}'>✏️</a></td>
            </tr>
        {% endfor %}
    </table>
    <div class="create_div"><button class="creator"><a href="{{ path('app_create_parcours') }}">➕</a></button></div>
{% endblock %}