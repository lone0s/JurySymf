{% extends 'base.html.twig' %}
{% block list %}
    <table>
        <th>Nom</th>
        <th>Nom Court</th>
        <th>Annee</th>
        <th>Periodicite</th>
        <th>Compensation</th>
        <th>Code Apog√©e</th>
        <th>Actif</th>
        <th>Commentaire</th>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.nom }}</td>
                <td>{{ parcour.nomCourt }}</td>
                <td>{{ parcour.annee }}</td>
                <td>{{ parcour.periodicite.nom }}</td>
                {% if 1 in parcour.compensation%}
                    <td>Faux</td>
                {% else %}
                    <td>Vrai</td>
                {% endif %}
                <td>{{ parcour.codeApogee }}</td>
                {% if 1 in parcour.actif%}
                    <td>Faux</td>
                {% else %}
                    <td>Vrai</td>
                {% endif %}
                <td>{{ parcour.commentaire }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}